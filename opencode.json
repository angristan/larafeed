{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "playwriter": {
            "type": "local",
            "command": [
                "npx",
                "playwriter@latest"
            ]
        },
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        }
    }
}