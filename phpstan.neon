includes:
    - vendor/larastan/larastan/extension.neon
    - vendor/nesbot/carbon/extension.neon

parameters:

    paths:
        - app/

    # Level 10 is the highest level
    level: 7

    ignoreErrors:
        # Collection/Paginator template covariance is a known issue with Larastan
        -
            message: '#Anonymous function should return Illuminate\\(Pagination\\LengthAwarePaginator|Support\\Collection).* but returns Illuminate\\(Pagination\\LengthAwarePaginator|Support\\Collection).*#'
            paths:
                - app/Actions/ShowFeedReader.php

        # DDTrace is a runtime PHP extension, not available during static analysis
        -
            message: '#Attribute class DDTrace\\Trace does not exist#'

#    excludePaths:
#        - ./*/*/FileToBeExcluded.php
