# =============================================================================
# Larafeed Configuration
# =============================================================================
# This file contains the base configuration for Larafeed.
# Secrets (APP_KEY, IMGPROXY_KEY, IMGPROXY_SALT) are auto-generated on first
# run and stored in .secrets/.env.generated
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Larafeed
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
# Change this to your domain (e.g., https://feeds.example.com)
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=errorlog
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
POSTGRES_DB=larafeed
DB_DATABASE=larafeed
DB_USERNAME=postgres
DB_PASSWORD=

# -----------------------------------------------------------------------------
# Session & Cache (Redis)
# -----------------------------------------------------------------------------
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
REDIS_PREFIX=larafeed_
CACHE_PREFIX=cache_

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

VITE_APP_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Optional: AI Summaries (Gemini)
# -----------------------------------------------------------------------------
# Get your API key at https://aistudio.google.com/apikey
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Optional: Telegram Notifications
# -----------------------------------------------------------------------------
# Get notified on user registration and failed login attempts
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# -----------------------------------------------------------------------------
# Optional: Error Tracking (Sentry)
# -----------------------------------------------------------------------------
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0
# SENTRY_PROFILES_SAMPLE_RATE=1.0

# -----------------------------------------------------------------------------
# Image Proxy (imgproxy)
# -----------------------------------------------------------------------------
# Keys are auto-generated on first run.
# Change this to your public imgproxy URL in production.
IMGPROXY_URL=http://localhost:8080
